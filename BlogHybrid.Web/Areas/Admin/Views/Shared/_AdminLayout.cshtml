<!DOCTYPE html>
<html lang="th" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0f172a">
    <title>@ViewData["Title"] - Admin | 404talk.com</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <!-- Page-specific Styles -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-body">
    <!-- Top Navigation -->
    <nav class="admin-topnav">
        <div class="admin-topnav-content">
            <!-- Left: Brand & Toggle -->
            <div class="admin-topnav-left">
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="admin-brand">
                    <i class="fas fa-crown me-2"></i>
                    <span class="brand-text">404talk Admin</span>
                </a>
            </div>

            <!-- Center: Breadcrumb -->
            <div class="admin-breadcrumb">
                @await Html.PartialAsync("_AdminBreadcrumb")
            </div>

            <!-- Right: User Menu -->
            <div class="admin-topnav-right">
                <!-- Notifications -->
                <div class="dropdown me-3">
                    <button class="btn btn-outline-light btn-sm" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-bell"></i>
                        <span class="badge bg-danger">3</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end notifications-dropdown">
                        <li class="dropdown-header">การแจ้งเตือน</li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-comment text-primary me-2"></i>
                                <div class="notification-content">
                                    <div class="notification-title">ความคิดเห็นใหม่</div>
                                    <div class="notification-time">5 นาทีที่แล้ว</div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-user-plus text-success me-2"></i>
                                <div class="notification-content">
                                    <div class="notification-title">สมาชิกใหม่</div>
                                    <div class="notification-time">1 ชั่วโมงที่แล้ว</div>
                                </div>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center" href="#">ดูทั้งหมด</a></li>
                    </ul>
                </div>

                <!-- Theme Toggle -->
                <button class="btn btn-outline-light btn-sm me-3" id="adminThemeToggle" title="เปลี่ยนธีม">
                    <i class="fas fa-sun" id="adminThemeIcon"></i>
                </button>

                <!-- User Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-shield me-2"></i>@User.Identity!.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header">
                            <div class="user-info">
                                <div class="user-name">@User.Identity.Name</div>
                                <div class="user-role">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="role-badge admin">Administrator</span>
                                    }
                                    else if (User.IsInRole("Moderator"))
                                    {
                                        <span class="role-badge moderator">Moderator</span>
                                    }
                                </div>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-user me-2"></i>โปรไฟล์
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-cog me-2"></i>ตั้งค่า
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i>ออกจากระบบ
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
        @await Html.PartialAsync("_AdminSidebar")
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
        <div class="admin-content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="admin-footer">
            <div class="admin-footer-content">
                <div class="footer-left">
                    <span class="text-muted">
                        © @DateTime.Now.Year 404talk.com Admin Panel
                    </span>
                </div>
                <div class="footer-right">
                    <span class="text-muted">
                        Version 1.0.0 |
                        <i class="fas fa-clock me-1"></i>
                        @DateTime.Now.ToString("HH:mm")
                    </span>
                </div>
            </div>
        </footer>
    </main>

    <!-- Mobile Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Loading Overlay -->
    <div class="admin-loading" id="adminLoading">
        <div class="loading-content">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="loading-text">กำลังโหลด...</div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    <script>
        // Initialize Notyf for Admin
        window.adminNotyf = new Notyf({
            duration: 4000,
            position: { x: 'right', y: 'top' },
            ripple: true,
            dismissible: true,
            types: [
                {
                    type: 'success',
                    background: 'linear-gradient(135deg, #059669, #10b981)',
                    icon: { className: 'fas fa-check-circle', tagName: 'span', color: 'white' }
                },
                {
                    type: 'error',
                    background: 'linear-gradient(135deg, #dc2626, #ef4444)',
                    icon: { className: 'fas fa-exclamation-triangle', tagName: 'span', color: 'white' }
                },
                {
                    type: 'warning',
                    background: 'linear-gradient(135deg, #d97706, #f59e0b)',
                    icon: { className: 'fas fa-exclamation-circle', tagName: 'span', color: 'white' }
                },
                {
                    type: 'info',
                    background: 'linear-gradient(135deg, #0891b2, #06b6d4)',
                    icon: { className: 'fas fa-info-circle', tagName: 'span', color: 'white' }
                }
            ]
        });
    </script>

    <!-- แยก TempData เป็น script tags ต่างหาก -->
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                adminNotyf.success('@Html.Raw(TempData["SuccessMessage"])');
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                adminNotyf.error('@Html.Raw(TempData["ErrorMessage"])');
            });
        </script>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                adminNotyf.open({
                    type: 'warning',
                    message: '@Html.Raw(TempData["WarningMessage"])'
                });
            });
        </script>
    }

    <!-- Page-specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>