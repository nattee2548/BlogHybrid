<!-- BlogHybrid.Web/Views/Shared/_AdminBreadcrumb.cshtml -->
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    var area = ViewContext.RouteData.Values["area"]?.ToString();
}

<nav class="admin-breadcrumb-nav" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-link">
                <i class="fas fa-home me-1"></i>หน้าหลัก
            </a>
        </li>

        @if (controller == "Dashboard")
        {
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        }
        else if (controller == "Post")
        {
            <li class="breadcrumb-item">
                <a href="#" class="breadcrumb-link">จัดการเนื้อหา</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @if (action == "Index")
                {
                    <text>บทความ</text>
                }
                else if (action == "Create")
                {

                    <text>เขียนบทความใหม่</text>
                }
                else if (action == "Edit")
                {

                    <text>แก้ไขบทความ</text>
                }
                else if (action == "Details")
                {

                    <text>รายละเอียดบทความ</text>
                }
                else
                {

                    <text>บทความ</text>
                }
            </li>
        }
        else if (controller == "Category")
        {
            <li class="breadcrumb-item">
                <a href="#" class="breadcrumb-link">จัดการเนื้อหา</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @if (action == "Index")
                {
                    <text>หมวดหมู่</text>
                }
                else if (action == "Create")
                {

                    <text>สร้างหมวดหมู่ใหม่</text>
                }
                else if (action == "Edit")
                {

                    <text>แก้ไขหมวดหมู่</text>
                }
                else
                {

                    <text>หมวดหมู่</text>
                }
            </li>
        }
        else if (controller == "Comment")
        {
            <li class="breadcrumb-item">
                <a href="#" class="breadcrumb-link">จัดการเนื้อหา</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @if (action == "Index")
                {
                    <text>ความคิดเห็น</text>
                }
                else if (action == "Details")
                {

                    <text>รายละเอียดความคิดเห็น</text>
                }
                else
                {

                    <text>ความคิดเห็น</text>
                }
            </li>
        }
        else if (controller == "Tag")
        {
            <li class="breadcrumb-item">
                <a href="#" class="breadcrumb-link">จัดการเนื้อหา</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @if (action == "Index")
                {
                    <text>แท็ก</text>
                }
                else if (action == "Create")
                {

                    <text>สร้างแท็กใหม่</text>
                }
                else if (action == "Edit")
                {

                    <text>แก้ไขแท็ก</text>
                }
                else
                {

                    <text>แท็ก</text>
                }
            </li>
        }
        else if (controller == "User")
