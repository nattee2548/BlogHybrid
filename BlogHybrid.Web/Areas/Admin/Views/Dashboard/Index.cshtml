    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

        .activity-item:last-child {
            margin-bottom: 0;
        }

    .activity-icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.875rem;
        margin-right: 0.75rem;
        flex-shrink: 0;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        font-weight: 500;
        color: var(--admin-text-primary);
        font-size: 0.875rem;
        margin-bottom: 0.125rem;
    }

    .activity-desc {
        color: var(--admin-text-secondary);
        font-size: 0.8rem;
        margin-bottom: 0.25rem;
    }

    .activity-time {
        color: var(--admin-text-muted);
        font-size: 0.75rem;
    }

    .system-status .status-item {
        margin-bottom: 1rem;
    }

        .system-status .status-item:last-child {
            margin-bottom: 0;
        }

    .table th {
        background: var(--admin-bg-tertiary);
        color: var(--admin-text-primary);
        border: var(--admin-border);
        font-weight: 500;
        font-size: 0.875rem;
    }

    .table td {
        border: var(--admin-border);
        color: var(--admin-text-secondary);
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background: var(--admin-bg-tertiary);
    }
</style>

@section Scripts {
    <script>
        // Dashboard JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Activity Chart
            initActivityChart();

            // Animate stats on load
            setTimeout(() => {
                if (typeof window.AdminStats !== 'undefined') {
                    window.AdminStats.animateCounters();
                }
            }, 500);
        });

        function initActivityChart() {
            const ctx = document.getElementById('activityChart');
            if (!ctx) return;

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['จ', 'อ', 'พ', 'พฤ', 'ศ', 'ส', 'อา'],
                    datasets: [
                        {
                            label: 'ผู้เข้าชม',
                            data: [65, 59, 80, 81, 56, 55, 40],
                            borderColor: '#3b82f6',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'บทความใหม่',
                            data: [28, 48, 40, 19, 86, 27, 90],
                            borderColor: '#10b981',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                color: '#cbd5e1'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#374151'
                            },
                            ticks: {
                                color: '#9ca3af'
                            }
                        },
                        x: {
                            grid: {
                                color: '#374151'
                            },
                            ticks: {
                                color: '#9ca3af'
                            }
                        }
                    }
                }
            });
        }

        function refreshDashboard() {
            if (window.adminLoading) {
                window.adminLoading.show('กำลังรีเฟรชข้อมูล...');

                setTimeout(() => {
                    window.adminLoading.hide();
                    if (window.adminNotyf) {
                        window.adminNotyf.success('รีเฟรชข้อมูลเรียบร้อย');
                    }
                    // Re-animate counters
                    if (typeof window.AdminStats !== 'undefined') {
                        window.AdminStats.animateCounters();
                    }
                }, 1500);
            }
        }

        function changePeriod(period) {
            const periodNames = {
                'today': 'วันนี้',
                'week': '7 วันที่แล้ว',
                'month': '30 วันที่แล้ว',
                'year': 'ปีนี้'
            };

            if (window.adminLoading) {
                window.adminLoading.show(`กำลังโหลดข้อมูล${periodNames[period]}...`);

                setTimeout(() => {
                    window.adminLoading.hide();
                    if (window.adminNotyf) {
                        window.adminNotyf.success(`แสดงข้อมูล${periodNames[period]}`);
                    }
                    // Update button text
                    document.querySelector('.dropdown-toggle').innerHTML =
                        `<i class="fas fa-calendar me-1"></i>${periodNames[period]}`;
                }, 1000);
            }
        }
    </script>
}