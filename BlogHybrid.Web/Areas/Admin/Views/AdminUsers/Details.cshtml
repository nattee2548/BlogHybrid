@model BlogHybrid.Web.Areas.Admin.Models.AdminUserDetailsViewModel
@{
    ViewData["Title"] = "รายละเอียด Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Toast Notifications -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="toast-notification toast-success">
        <i class="bi bi-check-circle-fill"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="toast-notification toast-error">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

<div class="admin-page-header">
    <div>
        <h1><i class="bi bi-shield-lock"></i> รายละเอียด Admin</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Admin</a></li>
                <li class="breadcrumb-item active">@Model.FullName</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="bi bi-pencil"></i> แก้ไข
        </a>
        <!-- ✅ เพิ่มปุ่ม Change Password -->
        <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-key"></i> เปลี่ยนรหัสผ่าน
        </a>
        @{
            var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        }
        @if (Model.Id != currentUserId)
        {
            <button type="button" 
                    class="btn @(Model.IsActive ? "btn-danger" : "btn-success")" 
                    onclick="confirmToggleActive()">
                <i class="bi @(Model.IsActive ? "bi-pause-circle" : "bi-play-circle")"></i>
                @(Model.IsActive ? "ปิดใช้งาน" : "เปิดใช้งาน")
            </button>
        }
    </div>
</div>

<div class="row">
    <!-- Left Column - Main Info -->
    <div class="col-md-8">
        <!-- Basic Information -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0"><i class="bi bi-person-badge"></i> ข้อมูลพื้นฐาน</h5>
            </div>
            <div class="admin-card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">ชื่อ-นามสกุล</label>
                        <p class="mb-0 fw-medium">@Model.FullName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Username</label>
                        <p class="mb-0 fw-medium">@Model.UserName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">อีเมล</label>
                        <p class="mb-0">
                            @Model.Email
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success ms-2">
                                    <i class="bi bi-check-circle"></i> ยืนยันแล้ว
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="bi bi-exclamation-circle"></i> ยังไม่ยืนยัน
                                </span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">เบอร์โทรศัพท์</label>
                        <p class="mb-0 fw-medium">@(Model.PhoneNumber ?? "-")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Information -->
        <div class="admin-card mt-4">
            <div class="admin-card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> ข้อมูลการใช้งาน</h5>
            </div>
            <div class="admin-card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">วันที่สมัคร</label>
                        <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">เข้าสู่ระบบล่าสุด</label>
                        <p class="mb-0">
                            @if (Model.LastLoginAt.HasValue)
                            {
                                @Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">ยังไม่เคยเข้าสู่ระบบ</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column - Status & Actions -->
    <div class="col-md-4">
        <!-- Status Card -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> สถานะ</h5>
            </div>
            <div class="admin-card-body">
                <div class="d-flex align-items-center gap-2 mb-3">
                    <label class="mb-0 text-muted small">สถานะการใช้งาน:</label>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle"></i> เปิดใช้งาน
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger">
                            <i class="bi bi-x-circle"></i> ปิดใช้งาน
                        </span>
                    }
                </div>

                <div class="d-flex align-items-center gap-2">
                    <label class="mb-0 text-muted small">สิทธิ์การใช้งาน:</label>
                    <span class="badge bg-primary">
                        <i class="bi bi-shield-lock"></i> Admin
                    </span>
                </div>
            </div>
        </div>

        <!-- Roles Card -->
        @if (Model.Roles != null && Model.Roles.Any())
        {
            <div class="admin-card mt-4">
                <div class="admin-card-header">
                    <h5 class="mb-0"><i class="bi bi-shield"></i> บทบาท</h5>
                </div>
                <div class="admin-card-body">
                    @foreach (var role in Model.Roles)
                    {
                        <span class="badge bg-secondary me-1 mb-1">@role</span>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Toggle Active Status Form (Hidden) -->
<form asp-action="ToggleActive" asp-route-id="@Model.Id" method="post" id="toggleActiveForm">
    @Html.AntiForgeryToken()
</form>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-primary" id="confirmButton"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toast Auto-hide
        document.addEventListener('DOMContentLoaded', function() {
            const toasts = document.querySelectorAll('.toast-notification');
            toasts.forEach(toast => {
                setTimeout(() => toast.classList.add('toast-show'), 100);
                setTimeout(() => {
                    toast.classList.remove('toast-show');
                    setTimeout(() => toast.remove(), 300);
                }, 5000);
            });
        });

        // Confirm Toggle Active
        function confirmToggleActive() {
            var isActive = @Model.IsActive.ToString().ToLower();
            var modalElement = document.getElementById('confirmModal');
            var confirmModal = new bootstrap.Modal(modalElement);
            
            var modalTitle = document.getElementById('modalTitle');
            var modalBody = document.getElementById('modalBody');
            var confirmButton = document.getElementById('confirmButton');

            if (isActive) {
                modalTitle.innerHTML = '<i class="bi bi-exclamation-triangle text-warning"></i> ยืนยันการปิดใช้งาน';
                modalBody.innerHTML = '<p class="mb-0">คุณแน่ใจหรือไม่ที่จะปิดใช้งานบัญชี Admin นี้?</p><div class="alert alert-warning mt-2 mb-0"><small><strong>หมายเหตุ:</strong> Admin จะไม่สามารถเข้าสู่ระบบได้</small></div>';
                confirmButton.className = 'btn btn-danger';
                confirmButton.innerHTML = '<i class="bi bi-pause-circle"></i> ยืนยันปิดใช้งาน';
            } else {
                modalTitle.innerHTML = '<i class="bi bi-info-circle text-info"></i> ยืนยันการเปิดใช้งาน';
                modalBody.innerHTML = '<p class="mb-0">คุณแน่ใจหรือไม่ที่จะเปิดใช้งานบัญชี Admin นี้?</p>';
                confirmButton.className = 'btn btn-success';
                confirmButton.innerHTML = '<i class="bi bi-play-circle"></i> ยืนยันเปิดใช้งาน';
            }

            confirmButton.onclick = function() {
                document.getElementById('toggleActiveForm').submit();
            };

            confirmModal.show();
        }
    </script>
}
