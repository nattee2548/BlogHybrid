<!DOCTYPE html>
<html lang="th" data-theme="light">
<head>
    <!-- Same head content as before -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 404alk</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/core/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/core/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/themes/light-mode.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/themes/dark-mode.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern/homepage.css" asp-append-version="true" />

    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const actualTheme = savedTheme || (prefersDark ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', actualTheme);
        })();
    </script>
</head>
<body>
    <!-- ========== MODERN NAVBAR ========== -->
    <nav class="modern-navbar">
        <div class="modern-navbar-container">
            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="modern-logo">
                <div class="modern-logo-icon">4</div>
                <span class="modern-logo-text">404alk</span>
            </a>

            <!-- Search Bar -->
            <div class="modern-search-container">
                <div class="modern-search">
                    <svg class="modern-search-icon" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                    </svg>
                    <input type="search" class="modern-search-input" placeholder="ค้นหาบทความ, ชุมชน, หรือผู้ใช้..." />
                    <kbd class="modern-search-shortcut">Ctrl+K</kbd>
                </div>
            </div>

            <!-- Actions -->
            <div class="modern-actions">
                <!-- Create Post Button -->
                <button class="modern-create-btn">
                    <svg viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    <span>สร้างโพสต์</span>
                </button>

                <!-- Notifications -->
                <button class="modern-icon-btn">
                    <svg viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z" />
                    </svg>
                    <span class="modern-badge">5</span>
                </button>

                <!-- Theme Toggle -->
                <button class="modern-theme-toggle">
                    <svg class="modern-theme-icon" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
                    </svg>
                </button>

                <!-- User Menu -->
                <div class="modern-user-menu">
                    <button class="modern-user-btn">
                        <img src="https://ui-avatars.com/api/?name=User&background=ff4500" alt="User" class="modern-user-avatar" />
                        <div class="modern-user-info">
                            <div class="modern-user-name">ชื่อผู้ใช้</div>
                            <div class="modern-user-level">Level 5 • 1.2K คะแนน</div>
                        </div>
                        <svg class="modern-user-chevron" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- ========== MAIN CONTAINER ========== -->
    <div class="main-main" style="max-width: 1400px; margin: 0 auto; padding: var(--space-6) var(--space-4);">
        <!-- MAIN CONTENT -->
        <main class="main-content" style="flex: 1;">
            <!-- Feed Header -->
            <div class="feed-header">
                <div class="feed-tabs">
                    <button class="feed-tab active">
                        <svg viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                        </svg>
                        <span>หน้าแรก</span>
                    </button>
                    <button class="feed-tab">
                        <svg viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                        </svg>
                        <span>มาแรง</span>
                    </button>
                    <button class="feed-tab">
                        <svg viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                        </svg>
                        <span>ติดตาม</span>
                    </button>
                </div>

                <button class="feed-filter">
                    <svg viewBox="0 0 20 20" fill="currentColor" style="width: 16px; height: 16px;">
                        <path d="M3 3a1 1 0 000 2h11a1 1 0 100-2H3zM3 7a1 1 0 000 2h7a1 1 0 100-2H3zM3 11a1 1 0 100 2h4a1 1 0 100-2H3zM15 8a1 1 0 10-2 0v5.586l-1.293-1.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L15 13.586V8z" />
                    </svg>
                    <span>ใหม่สุด</span>
                </button>
            </div>

            <!-- Create Post Box -->
            <div class="create-post-box">
                <div class="create-post-header">
                    <img src="https://ui-avatars.com/api/?name=User&background=ff4500" alt="User" class="create-post-avatar" />
                    <input type="text" class="create-post-input" placeholder="คุณกำลังคิดอะไรอยู่?" />
                </div>
                <div class="create-post-actions">
                    <button class="create-action-btn">
                        <svg viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                        </svg>
                        <span>รูปภาพ</span>
                    </button>
                    <button class="create-action-btn">
                        <svg viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                        <span>โค้ด</span>
                    </button>
                    <button class="create-action-btn">
                        <svg viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z" clip-rule="evenodd" />
                        </svg>
                        <span>อีโมจิ</span>
                    </button>
                </div>
            </div>

            @RenderBody()
        </main>

        <!-- MODERN SIDEBAR -->
        <aside class="modern-sidebar">
            <!-- Quick Actions -->
            <div class="quick-actions-card">
                <div class="quick-actions-title">🚀 Quick Actions</div>
                <div class="quick-actions-grid">
                    <button class="quick-action-btn">
                        <svg class="quick-action-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                        </svg>
                        <span class="quick-action-text">สร้างโพสต์</span>
                    </button>
                    <button class="quick-action-btn">
                        <svg class="quick-action-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                        </svg>
                        <span class="quick-action-text">ชุมชน</span>
                    </button>
                    <button class="quick-action-btn">
                        <svg class="quick-action-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                        </svg>
                        <span class="quick-action-text">บทความ</span>
                    </button>
                    <button class="quick-action-btn">
                        <svg class="quick-action-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
                        </svg>
                        <span class="quick-action-text">มาแรง</span>
                    </button>
                </div>
            </div>

            <!-- Stats Card -->
            <div class="stats-card">
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-value">2.5K</span>
                        <span class="stat-label">สมาชิก</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value">850</span>
                        <span class="stat-label">ออนไลน์</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value">125</span>
                        <span class="stat-label">โพสต์วันนี้</span>
                    </div>
                </div>
            </div>

            <!-- Trending Communities -->
            <div class="trending-card">
                <div class="trending-header">
                    <div class="trending-title">
                        <svg class="trending-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                        </svg>
                        <span>ชุมชนมาแรง</span>
                    </div>
                    <a href="#" class="view-all-link">ดูทั้งหมด</a>
                </div>
                <div class="trending-list">
                    <a href="#" class="trending-item">
                        <span class="trending-rank">1</span>
                        <div class="trending-avatar" style="background: #ff4500;">P</div>
                        <div class="trending-info">
                            <div class="trending-name">r/programming</div>
                            <div class="trending-members">8.5K สมาชิก</div>
                        </div>
                        <svg class="trending-arrow" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </a>
                    <a href="#" class="trending-item">
                        <span class="trending-rank">2</span>
                        <div class="trending-avatar" style="background: #46d160;">W</div>
                        <div class="trending-info">
                            <div class="trending-name">r/WebDev</div>
                            <div class="trending-members">3.8K สมาชิก</div>
                        </div>
                        <svg class="trending-arrow" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="categories-widget">
                <div class="categories-title">📚 หมวดหมู่ยอดนิยม</div>
                <div class="categories-grid">
                    <a href="#" class="category-chip">
                        <svg class="category-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                        <span>Programming</span>
                    </a>
                    <a href="#" class="category-chip">
                        <svg class="category-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z" />
                        </svg>
                        <span>DevOps</span>
                    </a>
                    <a href="#" class="category-chip">
                        <svg class="category-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                        </svg>
                        <span>UX/UI</span>
                    </a>
                    <a href="#" class="category-chip">
                        <svg class="category-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd" />
                            <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z" />
                        </svg>
                        <span>Career</span>
                    </a>
                </div>
            </div>

            <!-- Footer -->
            <div class="sidebar-footer">
                <div class="footer-links">
                    <a href="#" class="footer-link">เกี่ยวกับ</a>
                    <a href="#" class="footer-link">ช่วยเหลือ</a>
                    <a href="#" class="footer-link">เงื่อนไข</a>
                    <a href="#" class="footer-link">นโยบาย</a>
                    <a href="#" class="footer-link">API</a>
                </div>
                <div class="footer-copyright">
                    © @DateTime.Now.Year 404alk. All rights reserved.
                </div>
            </div>
        </aside>
    </div>

    <!-- Scripts -->
    <script src="~/js/theme-switcher.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>