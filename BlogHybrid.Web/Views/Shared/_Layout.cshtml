<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0066cc">

    <title>@ViewData["Title"]</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Page-specific Styles -->
    @await RenderSectionAsync("Styles", required: false)

    <!-- SEO Meta Tags -->
    @await RenderSectionAsync("Meta", required: false)
</head>
<body>
    <!-- Top Header -->
    <div class="top-header">
        <div class="container">
            <div class="row align-items-center py-2">
                <div class="col-md-6">
                    <span class="small">
                        <i class="fas fa-comments me-2"></i>
                        ชุมชนสำหรับคนที่กำลังหาคำตอบ
                    </span>
                </div>
                <div class="col-md-6 text-end">
                    <!-- Theme Toggle -->
                    <button id="theme-toggle" class="btn btn-outline-light btn-sm me-3" title="เปลี่ยนธีม">
                        <i class="fas fa-moon" id="theme-icon"></i>
                    </button>

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div class="dropdown d-inline-block">
                            <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-2"></i>@User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-user-circle me-2"></i>โปรไฟล์
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>ออกจากระบบ
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-sm me-2">
                            <i class="fas fa-sign-in-alt me-1"></i>เข้าสู่ระบบ
                        </a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-light btn-sm">
                            <i class="fas fa-user-plus me-1"></i>สมัครสมาชิก
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-search me-2"></i>404talk.com
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">หน้าแรก</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">หมวดหมู่</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Career Talk</a></li>
                                <li><a class="dropdown-item" href="#">Life Advice</a></li>
                                <li><a class="dropdown-item" href="#">Learning Hub</a></li>
                                <li><a class="dropdown-item" href="#">Mental Health</a></li>
                                <li><a class="dropdown-item" href="#">Lifestyle</a></li>
                                <li><a class="dropdown-item" href="#">Technology</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">บทความ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">เกี่ยวกับเรา</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">ติดต่อ</a>
                        </li>
                    </ul>

                    <div class="d-flex">
                        <input type="text" class="form-control me-2" placeholder="ค้นหา..." style="width: 200px;">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h5>404talk.com</h5>
                    <p class="small">ชุมชนสำหรับคนที่กำลังหาคำตอบในชีวิต</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h6>หมวดหมู่</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#">Career Talk</a></li>
                        <li><a href="#">Life Advice</a></li>
                        <li><a href="#">Learning Hub</a></li>
                        <li><a href="#">Mental Health</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h6>เกี่ยวกับเรา</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#">เกี่ยวกับ 404talk</a></li>
                        <li><a href="#">ติดต่อเรา</a></li>
                        <li><a href="#">นโยบายความเป็นส่วนตัว</a></li>
                        <li><a href="#">ข้อกำหนดการใช้งาน</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h6>ติดตามข่าวสาร</h6>
                    <p class="small">รับข้อมูลบทความใหม่ๆ ก่อนใคร</p>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="อีเมลของคุณ">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>

            <hr class="border-secondary">
            <div class="text-center">
                <p class="small mb-0">
                    &copy; @DateTime.Now.Year 404talk.com. สงวนลิขสิทธิ์ทุกประการ
                </p>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>

    <script>
        // Initialize Notyf (แสดงที่มุมล่าง)
        window.notyf = new Notyf({
            duration: 4000,
            position: { x: 'right', y: 'bottom' },
            ripple: true,
            dismissible: true,
            types: [
                {
                    type: 'success',
                    background: 'linear-gradient(135deg, #059669, #10b981)',
                    icon: {
                        className: 'fas fa-check-circle',
                        tagName: 'span',
                        color: 'white'
                    }
                },
                {
                    type: 'error',
                    background: 'linear-gradient(135deg, #dc2626, #ef4444)',
                    icon: {
                        className: 'fas fa-exclamation-triangle',
                        tagName: 'span',
                        color: 'white'
                    }
                },
                {
                    type: 'warning',
                    background: 'linear-gradient(135deg, #f59e0b, #fbbf24)',
                    icon: {
                        className: 'fas fa-exclamation-triangle',
                        tagName: 'span',
                        color: 'white'
                    }
                }
            ]
        });

        // Theme toggle
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');

            if (themeToggle && themeIcon) {
                themeToggle.addEventListener('click', function() {
                    const currentTheme = document.body.getAttribute('data-theme');
                    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

                    document.body.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);

                    themeIcon.className = newTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
                });

                // Load saved theme
                const savedTheme = localStorage.getItem('theme') || 'light';
                document.body.setAttribute('data-theme', savedTheme);
                if (savedTheme === 'dark') {
                    themeIcon.className = 'fas fa-sun';
                }
            }
        });

        // TempData notifications
        @if (TempData["SuccessMessage"] != null)
        {
                    <text>
                    document.addEventListener('DOMContentLoaded', function() {
                        notyf.success('@Html.Raw(TempData["SuccessMessage"])');
                    });
                    </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                    <text>
                    document.addEventListener('DOMContentLoaded', function() {
                        notyf.error('@Html.Raw(TempData["ErrorMessage"])');
                    });
                    </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>