@model BlogHybrid.Application.DTOs.Community.CommunityDetailsDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="community-details-container">

    <!-- Back Navigation -->
    <div class="back-navigation">
        <button onclick="goBack()" class="btn-back-nav">
            <i class="bi bi-arrow-left-circle-fill"></i>
            <span>กลับ</span>
        </button>
    </div>

    <!-- Cover Image -->
    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
    {
        <div class="community-cover">
            <img src="@Model.CoverImageUrl" alt="Cover" />
        </div>
    }

    <!-- Community Header -->
    <div class="community-header">
        <div class="community-header-content">
            <div class="community-info">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="community-avatar" />
                }
                else
                {
                    <div class="community-avatar-placeholder">
                        <i class="bi bi-people-fill"></i>
                    </div>
                }

                <div class="community-title-section">
                    <h1 class="community-name">@Model.Name</h1>
                    <p class="community-meta">
                        <span><i class="bi bi-people"></i> @Model.MemberCount สมาชิก</span>
                        <span><i class="bi bi-file-text"></i> @Model.PostCount โพสต์</span>
                        @if (Model.IsPrivate)
                        {
                            <span class="badge-private"><i class="bi bi-lock"></i> ส่วนตัว</span>
                        }
                    </p>
                </div>
            </div>

            <div class="community-actions">
                @if (Model.CanManageMembers)
                {
                    <a asp-controller="Community"
                       asp-action="ManageMembers"
                       asp-route-id="@Model.Id"
                       class="btn-manage-members">
                        <i class="bi bi-people-fill"></i>
                        จัดการสมาชิก
                        @if (Model.PendingMembersCount > 0)
                        {
                            <span class="notification-badge">@Model.PendingMembersCount</span>
                        }
                    </a>
                }

                @if (Model.IsCurrentUserMember == true)
                {
                    <button class="btn-joined" disabled>
                        <i class="bi bi-check-circle-fill"></i> เข้าร่วมแล้ว
                    </button>
                }
                else if (Model.IsCurrentUserMember == false)
                {
                    <form method="post" asp-controller="Community" asp-action="Join" asp-route-id="@Model.Id" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-join">
                            <i class="bi bi-plus-lg"></i> เข้าร่วมชุมชน
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

    <!-- Content Area -->
    <div class="community-content">
        <!-- Sidebar - อยู่ด้านบน -->
        <aside class="community-sidebar">
            <div class="sidebar-card">
                <h4><i class="bi bi-info-circle"></i> เกี่ยวกับชุมชน</h4>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p>@Model.Description</p>
                }

                <!-- Stats Grid - แนวนอน 4 คอลัมน์ -->
                <div class="stat-grid">
                    <div class="stat-item">
                        <i class="bi bi-people"></i>
                        <span class="stat-label">สมาชิก</span>
                        <span class="stat-value">@Model.MemberCount คน</span>
                    </div>
                    <div class="stat-item">
                        <i class="bi bi-file-text"></i>
                        <span class="stat-label">โพสต์</span>
                        <span class="stat-value">@Model.PostCount โพสต์</span>
                    </div>
                    <div class="stat-item">
                        <i class="bi bi-calendar"></i>
                        <span class="stat-label">สร้างเมื่อ</span>
                        <span class="stat-value">@Model.CreatedAt.ToString("dd ต.ค. yyyy", new System.Globalization.CultureInfo("th-TH"))</span>
                    </div>
                    <div class="stat-item">
                        <i class="bi bi-person"></i>
                        <span class="stat-label">ผู้สร้าง</span>
                        <span class="stat-value">@Model.CreatorDisplayName</span>
                    </div>
                </div>

                <!-- Rules (ถ้ามี) -->
                @if (!string.IsNullOrEmpty(Model.Rules))
                {
                    <div class="community-rules">
                        <h4>กฎของชุมชน</h4>
                        <p>@Model.Rules</p>
                    </div>
                }
            </div>
        </aside>

        <!-- Main Content - อยู่ด้านล่าง -->
        <main class="community-main">
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h3>ยังไม่มีโพสต์</h3>
                <p>เป็นคนแรกที่สร้างโพสต์ในชุมชนนี้!</p>
                @if (Model.IsCurrentUserMember == true)
                {
                    <button class="btn-create-post">
                        <i class="bi bi-plus-lg"></i> สร้างโพสต์
                    </button>
                }
            </div>
        </main>
    </div>
</div>

<script>
    function goBack() {
        // ตรวจสอบว่ามี history หรือไม่
        if (document.referrer && document.referrer !== '') {
            // มี referrer ให้ย้อนกลับ
            window.history.back();
        } else {
            // ไม่มี referrer ให้ไปหน้า communities
            window.location.href = '/communities';
        }
    }

    // เพิ่ม: ถ้า user กด browser back button ให้ทำงานเหมือนกัน
    window.addEventListener('popstate', function(event) {
        if (!document.referrer) {
            window.location.href = '/communities';
        }
    });
</script>



