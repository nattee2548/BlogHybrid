@model BlogHybrid.Application.DTOs.Community.CommunityDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="community-details-container">
    <!-- Cover Image -->
    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
    {
        <div class="community-cover">
            <img src="@Model.CoverImageUrl" alt="Cover" />
        </div>
    }

    <!-- Community Header -->
    <div class="community-header">
        <div class="community-header-content">
            <div class="community-info">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="community-avatar" />
                }
                else
                {
                    <div class="community-avatar-placeholder">
                        <i class="bi bi-people-fill"></i>
                    </div>
                }

                <div class="community-title-section">
                    <h1 class="community-name">@Model.Name</h1>
                    <p class="community-meta">
                        <span><i class="bi bi-people"></i> @Model.MemberCount สมาชิก</span>
                        <span><i class="bi bi-file-text"></i> @Model.PostCount โพสต์</span>
                        @if (Model.IsPrivate)
                        {
                            <span class="badge-private"><i class="bi bi-lock"></i> ส่วนตัว</span>
                        }
                    </p>
                </div>
            </div>

            <div class="community-actions">
                @if (Model.IsCurrentUserMember == true)
                {
                    <button class="btn-joined" disabled>
                        <i class="bi bi-check-lg"></i> เข้าร่วมแล้ว
                    </button>
                }
                else
                {
                    <button class="btn-join">
                        <i class="bi bi-plus-lg"></i> เข้าร่วม
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Community Content -->
    <div class="community-body">
        <!-- Sidebar -->
        <div class="community-sidebar">
            <div class="sidebar-card">
                <h3>เกี่ยวกับชุมชน</h3>
                <p class="community-description">@Model.Description</p>

                <div class="community-stats">
                    <div class="stat-item">
                        <i class="bi bi-calendar-plus"></i>
                        <div>
                            <div class="stat-label">สร้างเมื่อ</div>
                            <div class="stat-value">@Model.CreatedAt.ToString("dd MMM yyyy", new System.Globalization.CultureInfo("th-TH"))</div>
                        </div>
                    </div>
                    <div class="stat-item">
                        <i class="bi bi-person"></i>
                        <div>
                            <div class="stat-label">ผู้สร้าง</div>
                            <div class="stat-value">@Model.CreatorDisplayName</div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Rules))
                {
                    <div class="community-rules">
                        <h4>กฎชุมชน</h4>
                        <p>@Model.Rules</p>
                    </div>
                }
            </div>
        </div>

        <!-- Main Content -->
        <div class="community-main">
            <div class="empty-state">
                <i class="bi bi-chat-dots"></i>
                <h3>ยังไม่มีโพสต์ในชุมชนนี้</h3>
                <p>เป็นคนแรกที่โพสต์ในชุมชนนี้!</p>
                <button class="btn-create-post">
                    <i class="bi bi-plus-lg"></i> สร้างโพสต์
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .community-details-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .community-cover {
        width: 100%;
        height: 200px;
        overflow: hidden;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

        .community-cover img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .community-header {
        background: var(--card-bg, #ffffff);
        border-bottom: 1px solid var(--border-primary, #e5e7eb);
    }

    .community-header-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }

    .community-info {
        display: flex;
        gap: 1.5rem;
        align-items: center;
    }

    .community-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--bg-primary, #f8f9fa);
        margin-top: -40px;
    }

    .community-avatar-placeholder {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: var(--primary, #ff4500);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: -40px;
        border: 4px solid var(--bg-primary, #f8f9fa);
    }

        .community-avatar-placeholder i {
            font-size: 2rem;
            color: white;
        }

    .community-name {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary, #1a1a1a);
        margin: 0 0 0.5rem 0;
    }

    .community-meta {
        display: flex;
        gap: 1.5rem;
        align-items: center;
        color: var(--text-secondary, #666);
        font-size: 0.875rem;
        margin: 0;
    }

        .community-meta span {
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

    .badge-private {
        background: var(--bg-secondary, #f3f4f6);
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-weight: 600;
    }

    .btn-join, .btn-joined {
        padding: 0.75rem 2rem;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-join {
        background: var(--primary, #ff4500);
        color: white;
    }

        .btn-join:hover {
            background: var(--primary-hover, #e03d00);
            transform: translateY(-2px);
        }

    .btn-joined {
        background: var(--bg-secondary, #f3f4f6);
        color: var(--text-secondary, #666);
        cursor: default;
    }

    .community-body {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
    }

    .sidebar-card {
        background: var(--card-bg, #ffffff);
        border: 1px solid var(--border-primary, #e5e7eb);
        border-radius: 12px;
        padding: 1.5rem;
    }

        .sidebar-card h3 {
            font-size: 0.75rem;
            font-weight: 700;
            color: var(--text-secondary, #666);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin: 0 0 1rem 0;
        }

    .community-description {
        color: var(--text-primary, #1a1a1a);
        font-size: 0.875rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .community-stats {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-primary, #e5e7eb);
    }

    .stat-item {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }

        .stat-item i {
            font-size: 1.25rem;
            color: var(--text-secondary, #666);
        }

    .stat-label {
        font-size: 0.75rem;
        color: var(--text-secondary, #666);
    }

    .stat-value {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-primary, #1a1a1a);
    }

    .community-rules {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-primary, #e5e7eb);
    }

        .community-rules h4 {
            font-size: 0.875rem;
            font-weight: 600;
            margin: 0 0 0.5rem 0;
        }

        .community-rules p {
            font-size: 0.8125rem;
            color: var(--text-secondary, #666);
            line-height: 1.6;
        }

    .community-main {
        background: var(--card-bg, #ffffff);
        border: 1px solid var(--border-primary, #e5e7eb);
        border-radius: 12px;
        padding: 3rem 2rem;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
    }

        .empty-state i {
            font-size: 4rem;
            color: var(--text-secondary, #666);
            opacity: 0.5;
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-primary, #1a1a1a);
            margin: 0 0 0.5rem 0;
        }

        .empty-state p {
            color: var(--text-secondary, #666);
            margin-bottom: 1.5rem;
        }

    .btn-create-post {
        padding: 0.75rem 2rem;
        background: var(--primary, #ff4500);
        color: white;
        border: none;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-create-post:hover {
            background: var(--primary-hover, #e03d00);
            transform: translateY(-2px);
        }

    @@media (max-width: 991px) {
        .community-body {
            grid-template-columns: 1fr;
        }

        .community-sidebar {
            order: 2;
        }
    }

    @@media (max-width: 767px) {
        .community-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .community-info {
            flex-direction: column;
            align-items: flex-start;
        }

        .community-actions {
            width: 100%;
        }

        .btn-join, .btn-joined {
            width: 100%;
            justify-content: center;
        }
    }
</style>