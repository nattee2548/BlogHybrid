@model List<BlogHybrid.Application.DTOs.Community.CommunityDto>

@{
    ViewData["Title"] = "ชุมชนของฉัน";
    var currentFilter = ViewBag.CurrentFilter as string;
}

<div class="my-communities-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-title">
                <h1><i class="bi bi-collection"></i> ชุมชนของฉัน</h1>
                <p class="header-description">ชุมชนทั้งหมดที่คุณเป็นเจ้าของ</p>
            </div>
            <a href="/create-community" class="btn-create-new">
                <i class="bi bi-plus-lg"></i> สร้างชุมชนใหม่
            </a>
        </div>
    </div>
    <div class="filter-section">
        <div class="filter-tabs">
            <a href="@Url.Action("MyCommunities")"
               class="filter-tab @(string.IsNullOrEmpty(currentFilter) ? "active" : "")">
                <i class="bi bi-grid-fill"></i>
                <span>ทั้งหมด</span>
                <span class="count-badge">@ViewBag.TotalCommunities</span>
            </a>
            <a href="@Url.Action("MyCommunities", new { filter = "owned" })"
               class="filter-tab @(currentFilter == "owned" ? "active" : "")">
                <i class="bi bi-star-fill"></i>
                <span>ชุมชนของฉัน</span>
                <span class="count-badge">@ViewBag.OwnedCount</span>
            </a>
            <a href="@Url.Action("MyCommunities", new { filter = "joined" })"
               class="filter-tab @(currentFilter == "joined" ? "active" : "")">
                <i class="bi bi-check-circle-fill"></i>
                <span>เข้าร่วมแล้ว</span>
                <span class="count-badge">@ViewBag.JoinedCount</span>
            </a>
            <a href="@Url.Action("MyCommunities", new { filter = "pending" })"
               class="filter-tab @(currentFilter == "pending" ? "active" : "")">
                <i class="bi bi-clock-fill"></i>
                <span>รออนุมัติ</span>
                @if (ViewBag.PendingCount > 0)
                {
                    <span class="count-badge pending">@ViewBag.PendingCount</span>
                }
            </a>
            @if (ViewBag.BannedCount > 0)
            {
                <a href="@Url.Action("MyCommunities", new { filter = "banned" })"
                   class="filter-tab @(currentFilter == "banned" ? "active" : "")">
                    <i class="bi bi-x-circle-fill"></i>
                    <span>ถูกแบน</span>
                    <span class="count-badge banned">@ViewBag.BannedCount</span>
                </a>
            }
        </div>
    </div>

    <!-- Communities List -->
    <div class="communities-wrapper">
        @if (Model == null || !Model.Any())
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-collection"></i>
                </div>
                <h3>คุณยังไม่มีชุมชน</h3>
                <p>สร้างชุมชนแรกของคุณและเริ่มต้นสร้างชุมชนที่น่าสนใจ</p>
                <a href="/create-community" class="btn-create-first">
                    <i class="bi bi-plus-circle"></i> สร้างชุมชนแรก
                </a>
            </div>
        }
        else
        {
            <!-- Stats Summary -->
            <div class="stats-summary">
                <div class="stat-item">
                    <i class="bi bi-collection-fill"></i>
                    <div class="stat-content">
                        <div class="stat-value">@Model.Count</div>
                        <div class="stat-label">ชุมชนทั้งหมด</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="bi bi-people-fill"></i>
                    <div class="stat-content">
                        <div class="stat-value">@Model.Sum(c => c.MemberCount)</div>
                        <div class="stat-label">สมาชิกรวม</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="bi bi-file-text-fill"></i>
                    <div class="stat-content">
                        <div class="stat-value">@Model.Sum(c => c.PostCount)</div>
                        <div class="stat-label">โพสต์รวม</div>
                    </div>
                </div>
            </div>

            <!-- Communities Grid -->
            <div class="communities-grid">
                @foreach (var community in Model)
                {
                    <div class="community-card @(community.IsActive ? "" : "inactive")">
                        <!-- Cover Image -->
                        @if (!string.IsNullOrEmpty(community.CoverImageUrl))
                        {
                            <div class="community-cover">
                                <img src="@community.CoverImageUrl" alt="Cover" />
                            </div>
                        }
                        else
                        {
                            <div class="community-cover-placeholder">
                                <i class="bi bi-image"></i>
                            </div>
                        }

                        <!-- Card Content -->
                        <div class="card-content">
                            <!-- Community Avatar & Info -->
                            <div class="community-info">
                                @if (!string.IsNullOrEmpty(community.ImageUrl))
                                {
                                    <img src="@community.ImageUrl" alt="@community.Name" class="community-avatar" />
                                }
                                else
                                {
                                    <div class="community-avatar-placeholder">
                                        <i class="bi bi-people-fill"></i>
                                    </div>
                                }

                                <div class="community-details">
                                    <h3 class="community-name">
                                        @* <a href="/@community.CategorySlug/@community.Slug">@community.Name</a> *@
                                        <a asp-controller="Community"
                                           asp-action="Details"
                                           asp-route-communitySlug="@community.Slug">
                                            @community.Name
                                        </a>
                                    </h3>
                                    <p class="community-category">
                                        <div class="community-categories-list">
                                            @if (community.Categories != null && community.Categories.Any())
                                            {
                                                foreach (var category in community.Categories.Take(3))
                                                {
                                                    <span class="category-badge" style="background-color: @(category.CategoryColor)15; color: @category.CategoryColor; border: 1px solid @(category.CategoryColor)40;">
                                                        <i class="bi bi-tag-fill"></i> @category.CategoryName
                                                    </span>
                                                }
                                                @if (community.Categories.Count > 3)
                                                {
                                                    <span class="category-badge-more">+@(community.Categories.Count - 3)</span>
                                                }
                                            }
                                        </div>
                                    </p>
                                </div>
                            </div>

                            <!-- Description -->
                            @if (!string.IsNullOrEmpty(community.Description))
                            {
                                <p class="community-description">@community.Description</p>
                            }

                            <!-- Stats -->
                            <div class="community-stats">
                                <div class="stat">
                                    <i class="bi bi-people"></i>
                                    <span>@community.MemberCount สมาชิก</span>
                                </div>
                                <div class="stat">
                                    <i class="bi bi-file-text"></i>
                                    <span>@community.PostCount โพสต์</span>
                                </div>
                            </div>

                            <!-- Badges -->
                            <div class="community-badges">
                                @if (community.IsPrivate)
                                {
                                    <span class="badge badge-private">
                                        <i class="bi bi-lock-fill"></i> ส่วนตัว
                                    </span>
                                }
                                @if (community.IsActive)
                                {
                                    <span class="badge badge-active">
                                        <i class="bi bi-check-circle-fill"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">
                                        <i class="bi bi-pause-circle"></i> ไม่ Active
                                    </span>
                                }
                                <span class="badge badge-creator">
                                    <i class="bi bi-star-fill"></i> เจ้าของ
                                </span>
                            </div>

                            <!-- Actions -->
                            <div class="card-actions">
                                <a asp-controller="Community"
                                   asp-action="Details"
                                   asp-route-communitySlug="@community.Slug"
                                   class="btn-action btn-view">
                                    <i class="bi bi-eye"></i> ดูชุมชน
                                </a>
                                <!-- Dropdown Menu -->
                                <div class="dropdown-wrapper">
                                    <button class="btn-action btn-manage dropdown-toggle" onclick="toggleDropdown(@community.Id)">
                                        <i class="bi bi-gear"></i> จัดการ
                                        <i class="bi bi-chevron-down dropdown-icon"></i>
                                    </button>
                                    <div class="dropdown-menu" id="dropdown-@community.Id">
                                        <a asp-controller="Community"
                                           asp-action="Edit"
                                           asp-route-id="@community.Id"
                                           class="dropdown-item">
                                            <i class="bi bi-pencil"></i> แก้ไขชุมชน
                                        </a>
                                        <a asp-controller="Community"
                                           asp-action="ManageMembers"
                                           asp-route-id="@community.Id"
                                           class="dropdown-item">
                                            <i class="bi bi-people"></i> จัดการสมาชิก
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a href="#" class="dropdown-item text-danger">
                                            <i class="bi bi-trash"></i> ลบชุมชน
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Created Date -->
                            <div class="card-footer">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i>
                                    สร้างเมื่อ @community.CreatedAt.ToString("dd MMM yyyy", new System.Globalization.CultureInfo("th-TH"))
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .my-communities-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Header */
    .page-header {
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }

