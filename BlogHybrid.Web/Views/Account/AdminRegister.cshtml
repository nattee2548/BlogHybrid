@model BlogHybrid.Web.Models.Account.AdminRegisterViewModel
@{
    ViewData["Title"] = "Admin Registration";
    Layout = null; // ยังคงไม่ใช้ Layout เพื่อให้หน้า Register เรียบง่าย
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <title>@ViewData["Title"] - BlogHybrid Admin</title>
    
    @* Bootstrap CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    
    @* Custom CSS *@
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
            </div>
            <h1 class="auth-title">สมัครสมาชิก Admin</h1>
            <p class="auth-subtitle">สร้างบัญชีผู้ดูแลระบบใหม่</p>
        </div>

        <form method="post" asp-action="AdminRegister" class="auth-form" autocomplete="on">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            
            <div class="form-group">
                <label asp-for="DisplayName" class="form-label">ชื่อที่แสดง</label>
                <input asp-for="DisplayName" 
                       type="text" 
                       class="form-control" 
                       placeholder="ชื่อของคุณ"
                       autocomplete="name"
                       autofocus
                       required />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">อีเมล</label>
                <input asp-for="Email" 
                       type="email" 
                       class="form-control" 
                       placeholder="admin@example.com"
                       autocomplete="email"
                       required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">รหัสผ่าน</label>
                <input asp-for="Password" 
                       type="password" 
                       class="form-control" 
                       placeholder="••••••••"
                       autocomplete="new-password"
                       required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">ยืนยันรหัสผ่าน</label>
                <input asp-for="ConfirmPassword" 
                       type="password" 
                       class="form-control" 
                       placeholder="••••••••"
                       autocomplete="new-password"
                       required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                สมัครสมาชิก
            </button>

            <a asp-action="AdminLogin" class="btn btn-secondary">
                มีบัญชีแล้ว? เข้าสู่ระบบ
            </a>
        </form>

        <div class="auth-footer">
            <p>
                <a asp-controller="Home" asp-action="Index">← กลับหน้าแรก</a>
            </p>
            <p style="margin-top: 12px; font-size: 12px; color: #999;">
                หมายเหตุ: บัญชีใหม่จะต้องรอการอนุมัติจากผู้ดูแลระบบก่อนใช้งาน
            </p>
        </div>
    </div>

    @* Toast Notifications *@
    <partial name="_ToastNotification" />

    @* Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
