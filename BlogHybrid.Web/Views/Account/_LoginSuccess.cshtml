<!-- BlogHybrid.Web/Views/Account/_LoginSuccess.cshtml -->
@{
    var email = ViewBag.Email ?? "ไม่ระบุ";
    var redirectUrl = ViewBag.RedirectUrl ?? "/";

    // ตรวจสอบปลายทางเพื่อแสดงข้อความที่เหมาะสม
    var isAdminArea = redirectUrl.Contains("/Admin/");
    var isModeratorArea = redirectUrl.Contains("/Admin/Moderation");

    string destinationMessage;
    string iconClass;

    if (isModeratorArea)
    {
        destinationMessage = "กำลังนำคุณเข้าสู่หน้า Moderation...";
        iconClass = "fas fa-shield-alt";
    }
    else if (isAdminArea)
    {
        destinationMessage = "กำลังนำคุณเข้าสู่ Admin Dashboard...";
        iconClass = "fas fa-crown";
    }
    else
    {
        destinationMessage = "กำลังนำคุณเข้าสู่หน้าหลัก...";
        iconClass = "fas fa-home";
    }
}

<div id="login-form-container">
    <div class="auth-success text-center">
        <div class="success-animation">
            <div class="icon mb-3">
                <i class="fas fa-check-circle" style="font-size: 4rem; color: #059669;"></i>
            </div>
            <h3 class="text-success mb-3">เข้าสู่ระบบสำเร็จ!</h3>
            <p class="text-muted mb-2">ยินดีต้อนรับกลับมา</p>
            <p class="small text-muted mb-4">อีเมล: <strong>@email</strong></p>

            <!-- Role-based destination message -->
            @if (isAdminArea)
            {
                <div class="alert alert-info border-0 mb-4" style="background: rgba(0, 102, 204, 0.1);">
                    <i class="@iconClass me-2" style="color: #0066cc;"></i>
                    <span style="color: #0066cc;">@destinationMessage</span>
                </div>
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center">
                    <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">@destinationMessage</span>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Trigger success event
    document.dispatchEvent(new CustomEvent('login-success'));

    // Redirect after 2 seconds (3 seconds for admin to read the message)
    var redirectDelay = @(isAdminArea ? "3000" : "2000");
    setTimeout(function() {
        window.location.href = '@Html.Raw(redirectUrl)';
    }, redirectDelay);
</script>