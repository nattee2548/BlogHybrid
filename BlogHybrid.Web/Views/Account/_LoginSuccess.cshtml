<!-- BlogHybrid.Web/Views/Account/_LoginSuccess.cshtml -->
@{
    var email = ViewBag.Email ?? "ไม่ระบุ";
    var redirectUrl = ViewBag.RedirectUrl ?? "/";
}

<div id="login-form-container">
    <div class="auth-success text-center">
        <div class="success-animation">
            <div class="icon mb-3">
                <i class="fas fa-check-circle" style="font-size: 4rem; color: #059669;"></i>
            </div>
            <h3 class="text-success mb-3">เข้าสู่ระบบสำเร็จ!</h3>
            <p class="text-muted mb-2">ยินดีต้อนรับกลับมา</p>
            <p class="small text-muted mb-4">อีเมล: <strong>@email</strong></p>

            <div class="d-flex align-items-center justify-content-center">
                <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <span class="text-muted">กำลังนำคุณเข้าสู่หน้าหลัก...</span>
            </div>
        </div>
    </div>
</div>

<script>
    // Trigger success event
    document.dispatchEvent(new CustomEvent('login-success'));

    // Redirect after 2 seconds
    setTimeout(function() {
        window.location.href = '@Html.Raw(redirectUrl)';
    }, 2000);
</script>
