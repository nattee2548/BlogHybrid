@{
    ViewData["Title"] = "เข้าสู่ระบบ - 404talk.com";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-container">
    <div class="auth-card">
        <!-- Header -->
        <div class="auth-header">
            <div class="auth-icon">
                <i class="fas fa-sign-in-alt"></i>
            </div>
            <h1 class="auth-title">เข้าสู่ระบบ</h1>
            <p class="auth-subtitle">ยินดีต้อนรับกลับสู่ 404talk.com</p>
        </div>

        <!-- Login Form -->
        <div class="text-center">
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle me-2"></i>
                หน้าเข้าสู่ระบบยังไม่พร้อมใช้งาน
            </div>

            <p class="text-muted mb-4">ระบบกำลังอยู่ในระหว่างการพัฒนา</p>

            <div class="d-grid gap-2">
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>สมัครสมาชิกใหม่
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="fas fa-home me-2"></i>กลับหน้าแรก
                </a>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4 pt-3 border-top">
            <p class="mb-0 text-muted small">
                ยังไม่มีบัญชี?
                <a asp-controller="Account" asp-action="Register" class="text-decoration-none">สมัครสมาชิก</a>
            </p>
        </div>
    </div>
</div>

@section Meta {
    <meta name="description" content="เข้าสู่ระบบ 404talk.com ชุมชนสำหรับคนที่กำลังหาคำตอบ">
    <meta property="og:title" content="เข้าสู่ระบบ - 404talk.com">
    <meta property="og:description" content="เข้าสู่ระบบ 404talk.com ชุมชนสำหรับคนที่กำลังหาคำตอบ">
}