@model BlogHybrid.Web.Models.Account.AdminLoginViewModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = null; // ยังคงไม่ใช้ Layout เพื่อให้หน้า Login เรียบง่าย
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <title>@ViewData["Title"] - BlogHybrid Admin</title>
    
    @* Bootstrap CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    
    @* Custom CSS *@
    <link rel="stylesheet" href="~/css/admin-auth.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5zm0 18c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6zm-1-10h2v2h-2v-2zm0 4h2v4h-2v-4z"/>
                </svg>
            </div>
            <h1 class="auth-title">Admin Login</h1>
            <p class="auth-subtitle">เข้าสู่ระบบจัดการเว็บไซต์</p>
        </div>

        <form method="post" asp-action="AdminLogin" class="auth-form" autocomplete="on">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label">อีเมล</label>
                <input asp-for="Email" 
                       type="email" 
                       class="form-control" 
                       placeholder="admin@example.com"
                       autocomplete="email"
                       autofocus
                       required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">รหัสผ่าน</label>
                <input asp-for="Password" 
                       type="password" 
                       class="form-control" 
                       placeholder="••••••••"
                       autocomplete="current-password"
                       required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="RememberMe" 
                       type="checkbox" 
                       class="form-check-input" 
                       id="rememberMe" />
                <label for="rememberMe" class="form-check-label">
                    จดจำการเข้าสู่ระบบ
                </label>
            </div>

            <button type="submit" class="btn btn-primary">
                เข้าสู่ระบบ
            </button>

            <a asp-action="AdminRegister" class="btn btn-secondary">
                สมัครสมาชิกใหม่
            </a>
        </form>

        <div class="auth-footer">
            <p>
                <a asp-controller="Home" asp-action="Index">← กลับหน้าแรก</a>
            </p>
        </div>
    </div>
    <partial name="_ToastNotification" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
