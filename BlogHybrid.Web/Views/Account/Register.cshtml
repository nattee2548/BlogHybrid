@model BlogHybrid.Web.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "สมัครสมาชิก";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <title>@ViewData["Title"] - 404alk</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
                </svg>
            </div>
            <h1 class="auth-title">สร้างบัญชีใหม่</h1>
            <p class="auth-subtitle">เข้าร่วม<strong>ชุมชน</strong> 404alk วันนี้</p>
        </div>

        <form method="post" asp-action="Register" class="auth-form" autocomplete="on">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    อีเมล <span style="color: red;">*</span>
                </label>
                <input asp-for="Email"
                       type="email"
                       class="form-control"
                       placeholder="example@email.com"
                       autocomplete="email"
                       autofocus
                       required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisplayName" class="form-label">
                    ชื่อที่แสดงในเว็บไซต์ <span style="color: red;">*</span>
                </label>
                <input asp-for="DisplayName"
                       type="text"
                       class="form-control"
                       placeholder="ชื่อที่จะแสดงในเว็บไซต์"
                       autocomplete="username"
                       required />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    รหัสผ่าน <span style="color: red;">*</span>
                </label>
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       placeholder="••••••••"
                       autocomplete="new-password"
                       required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">
                    ยืนยันรหัสผ่าน <span style="color: red;">*</span>
                </label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="form-control"
                       placeholder="••••••••"
                       autocomplete="new-password"
                       required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-check" style="margin: 20px 0;">
                <input asp-for="AcceptTerms"
                       type="checkbox"
                       class="form-check-input"
                       id="acceptTerms" />
                <label for="acceptTerms" class="form-check-label">
                    ข้อมูลของคุณได้รับการปกป้องและเข้ารหัสอย่างปลอดภัย
                    <a href="#"
                       data-bs-toggle="modal"
                       data-bs-target="#termsModal"
                       style="color: #0066cc; text-decoration: none;">
                        ข้อกำหนดการใช้งาน
                    </a>
                    และ
                    <a href="#"
                       data-bs-toggle="modal"
                       data-bs-target="#termsModal"
                       style="color: #0066cc; text-decoration: none;">
                        นโยบายความเป็นส่วนตัว
                    </a>
                </label>
                <span asp-validation-for="AcceptTerms" class="text-danger" style="display: block;"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> สมัครสมาชิก
            </button>

            <a asp-action="Login" class="btn btn-secondary">
                <i class="bi bi-box-arrow-in-right"></i> มีบัญชีแล้ว? เข้าสู่ระบบ
            </a>
        </form>

        <div class="auth-footer">
            <p>
                <a asp-controller="Home" asp-action="Index">← กลับหน้าแรก</a>
            </p>
        </div>
    </div>

    @* Terms Modal *@
    <div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="termsModalLabel">ข้อกำหนดและเงื่อนไขการใช้งาน</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div style="padding: 20px;">
                        <h6 style="color: #333; font-weight: 600; margin-bottom: 15px;">1. การยอมรับข้อกำหนด</h6>
                        <p>เมื่อคุณสมัครสมาชิกและใช้งานเว็บไซต์ 404alk แสดงว่าคุณยอมรับข้อกำหนดและเงื่อนไขนี้</p>

                        <h6 style="color: #333; font-weight: 600; margin-bottom: 15px; margin-top: 20px;">2. ความรับผิดชอบของผู้ใช้</h6>
                        <p>คุณต้องรับผิดชอบต่อเนื้อหาที่คุณโพสต์และกิจกรรมทั้งหมดภายใต้บัญชีของคุณ</p>

                        <h6 style="color: #333; font-weight: 600; margin-bottom: 15px; margin-top: 20px;">3. นโยบายความเป็นส่วนตัว</h6>
                        <p>เราเคารพความเป็นส่วนตัวของคุณและจะไม่เปิดเผยข้อมูลส่วนบุคคลโดยไม่ได้รับอนุญาต</p>

                        <h6 style="color: #333; font-weight: 600; margin-bottom: 15px; margin-top: 20px;">4. การใช้งานที่ยอมรับได้</h6>
                        <p>ห้ามโพสต์เนื้อหาที่ผิดกฎหมาย ละเมิดลิขสิทธิ์ หรือเป็นการล่วงละเมิดผู้อื่น</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
                </div>
            </div>
        </div>
    </div>

    <partial name="_ToastNotification" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>