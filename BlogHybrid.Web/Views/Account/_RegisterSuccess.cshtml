@* _RegisterSuccess.cshtml *@
@{
    var email = ViewBag.Email ?? "ไม่ระบุ";
}

<div id="register-form-container">
    <div class="auth-success">
        <div class="icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h3 class="text-success">สมัครสมาชิกเรียบร้อย!</h3>
        <p class="text-muted">บัญชีของคุณถูกสร้างเรียบร้อยแล้ว</p>
        <p class="small text-muted">อีเมล: <strong>@email</strong></p>

        <div class="mt-3">
            <div class="spinner-border spinner-border-sm text-primary me-2"></div>
            <span class="text-muted">กำลังนำคุณไปหน้าเข้าสู่ระบบ...</span>
        </div>
    </div>
</div>

<script>
    document.dispatchEvent(new CustomEvent('registration-success'));
</script>